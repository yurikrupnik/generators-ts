{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "arrow-body-style": "warn",
    "no-use-before-define": "warn",
    "import/no-unresolved": 0,
    "indent": [2, 4],
    "comma-dangle": 0,
    "no-underscore-dangle": 0,
    "implicit-arrow-linebreak": 0,
    "quotes": ["error", "double"]
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "airbnb-base"
  ],
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  }
}
